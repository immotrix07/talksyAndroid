<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Deep shadow for 3D effect -->
    <item android:top="8dp" android:left="8dp" android:right="8dp" android:bottom="8dp">
        <shape android:shape="oval">
            <solid android:color="#20000000" />
        </shape>
    </item>
    
    <!-- Base glass layer -->
    <item android:top="4dp" android:left="4dp" android:right="4dp" android:bottom="4dp">
        <shape android:shape="oval">
            <gradient
                android:angle="45"
                android:startColor="#15FFFFFF"
                android:centerColor="#08FFFFFF"
                android:endColor="#03FFFFFF"
                android:type="linear" />
        </shape>
    </item>
    
    <!-- Glass highlight -->
    <item android:top="2dp" android:left="2dp" android:right="2dp" android:bottom="2dp">
        <shape android:shape="oval">
            <gradient
                android:angle="45"
                android:startColor="#25FFFFFF"
                android:endColor="#00FFFFFF"
                android:type="linear" />
        </shape>
    </item>
    
    <!-- Inner reflection -->
    <item android:top="6dp" android:left="6dp" android:right="6dp" android:bottom="6dp">
        <shape android:shape="oval">
            <gradient
                android:angle="135"
                android:startColor="#10FFFFFF"
                android:endColor="#00FFFFFF"
                android:type="linear" />
        </shape>
    </item>
    
    <!-- Glass border -->
    <item>
        <shape android:shape="oval">
            <solid android:color="@android:color/transparent" />
            <stroke
                android:width="0.8dp"
                android:color="#40FFFFFF" />
        </shape>
    </item>
    
</layer-list>
