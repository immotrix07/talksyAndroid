<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Shadow layer for depth -->
    <item android:top="4dp" android:left="4dp" android:right="4dp" android:bottom="4dp">
        <shape>
            <solid android:color="#20000000" />
            <corners android:radius="24dp" />
        </shape>
    </item>
    
    <!-- Base glass layer -->
    <item android:top="2dp" android:left="2dp" android:right="2dp" android:bottom="2dp">
        <shape>
            <gradient
                android:angle="45"
                android:startColor="#25FFFFFF"
                android:centerColor="#15FFFFFF"
                android:endColor="#08FFFFFF"
                android:type="linear" />
            <corners android:radius="22dp" />
        </shape>
    </item>
    
    <!-- Glass highlight layer -->
    <item android:top="1dp" android:left="1dp" android:right="1dp" android:bottom="1dp">
        <shape>
            <gradient
                android:angle="45"
                android:startColor="#40FFFFFF"
                android:endColor="#00FFFFFF"
                android:type="linear" />
            <corners android:radius="21dp" />
        </shape>
    </item>
    
    <!-- Inner glass reflection -->
    <item android:top="3dp" android:left="3dp" android:right="3dp" android:bottom="3dp">
        <shape>
            <gradient
                android:angle="135"
                android:startColor="#20FFFFFF"
                android:endColor="#00FFFFFF"
                android:type="linear" />
            <corners android:radius="19dp" />
        </shape>
    </item>
    
    <!-- Glass border with depth -->
    <item>
        <shape>
            <solid android:color="@android:color/transparent" />
            <stroke
                android:width="1dp"
                android:color="#60FFFFFF" />
            <corners android:radius="20dp" />
        </shape>
    </item>
    
</layer-list>
