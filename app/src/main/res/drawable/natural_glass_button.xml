<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Soft shadow for natural depth -->
    <item android:top="3dp" android:left="3dp" android:right="3dp" android:bottom="3dp">
        <shape>
            <solid android:color="#15000000" />
            <corners android:radius="25dp" />
        </shape>
    </item>
    
    <!-- Base glass layer with natural transparency -->
    <item>
        <shape>
            <gradient
                android:angle="45"
                android:startColor="#15FFFFFF"
                android:centerColor="#10FFFFFF"
                android:endColor="#06FFFFFF"
                android:type="linear" />
            <corners android:radius="22dp" />
        </shape>
    </item>
    
    <!-- Natural glass highlight -->
    <item android:top="1dp" android:left="1dp" android:right="1dp" android:bottom="1dp">
        <shape>
            <gradient
                android:angle="45"
                android:startColor="#25FFFFFF"
                android:endColor="#00FFFFFF"
                android:type="linear" />
            <corners android:radius="21dp" />
        </shape>
    </item>
    
    <!-- Subtle inner reflection -->
    <item android:top="2dp" android:left="2dp" android:right="2dp" android:bottom="2dp">
        <shape>
            <gradient
                android:angle="135"
                android:startColor="#10FFFFFF"
                android:endColor="#00FFFFFF"
                android:type="linear" />
            <corners android:radius="20dp" />
        </shape>
    </item>
    
    <!-- Natural glass border -->
    <item>
        <shape>
            <solid android:color="@android:color/transparent" />
            <stroke
                android:width="0.6dp"
                android:color="#40FFFFFF" />
            <corners android:radius="22dp" />
        </shape>
    </item>
    
</layer-list>
