<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Soft shadow for natural depth -->
    <item android:top="1dp" android:left="1dp" android:right="1dp" android:bottom="1dp">
        <shape>
            <solid android:color="#08000000" />
            <corners android:radius="14dp" />
        </shape>
    </item>
    
    <!-- Base glass layer with natural transparency -->
    <item>
        <shape>
            <gradient
                android:angle="45"
                android:startColor="#10FFFFFF"
                android:centerColor="#06FFFFFF"
                android:endColor="#03FFFFFF"
                android:type="linear" />
            <corners android:radius="13dp" />
        </shape>
    </item>
    
    <!-- Natural glass highlight -->
    <item android:top="0.5dp" android:left="0.5dp" android:right="0.5dp" android:bottom="0.5dp">
        <shape>
            <gradient
                android:angle="45"
                android:startColor="#18FFFFFF"
                android:endColor="#00FFFFFF"
                android:type="linear" />
            <corners android:radius="12.5dp" />
        </shape>
    </item>
    
    <!-- Natural glass border -->
    <item>
        <shape>
            <solid android:color="@android:color/transparent" />
            <stroke
                android:width="0.3dp"
                android:color="#25FFFFFF" />
            <corners android:radius="13dp" />
        </shape>
    </item>
    
</layer-list>
